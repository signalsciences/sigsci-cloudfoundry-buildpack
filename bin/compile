#!/usr/bin/env bash

# script is not a final buildpack, but we do want it to be usable
# as a decorator as long as meta-buildpack is supported.

BIN_DIR=$(dirname "$0")
ROOT_DIR=$(dirname "$BIN_DIR")
BUILD_DIR=$1

echo "COMPILE Installing signalsciences cloudfoundry scripts..."
mkdir -p "$BUILD_DIR"/.profile.d
cp "$ROOT_DIR"/lib/sigsci-agent.sh "$BUILD_DIR"/.profile.d
chmod +x "$BUILD_DIR"/.profile.d/sigsci-agent.sh
